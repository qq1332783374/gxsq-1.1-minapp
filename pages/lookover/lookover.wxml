<view class='lookover'>
  <view class='headinfo flex  p-xs margin-bottom-sm mb-sm padding bg-white'>
    <view class='flex-sub padding-sm margin-xs radius'>
      <image src='{{stuHeadImg}}' class='radius'></image>
    </view>
    <view class='info flex-twice  padding-sm margin-xs radius'>
      <view class='userName'>{{lookover.stuName}}</view>
      <view class='userInfo'>
        
        <view>班级：{{lookover.className}}</view>
        <view>地区：{{lookover.familyAdd}}</view>
      </view> 
    </view>
  </view>
  <view class='telePhone bg-white solid-bottom'>
      <text class='Phone'>电话号码：</text>
      <text>{{lookover.telePhone}}</text>
    </view>
    <view class='send'>
      <button class='btn bg-white cu-btn lg button-hover' bindtap='sendMessage'>发送信息</button>
    </view>
</view>